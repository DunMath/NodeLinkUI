<Window x:Class="NodeLinkUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NodeLinkUI"
        Title="Settings" Height="450" Width="600">
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Master IP:"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="MasterIpTextBox" Margin="5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Heartbeat Interval (ms):"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="HeartbeatIntervalTextBox" Margin="5"/>

        <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="UseGpuCheckBox" Content="Use GPU Globally" Margin="5"/>

        <GroupBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Header="Nominated Apps" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListBox x:Name="SelectedAppsListBox" Grid.Row="0" Margin="5" SelectionChanged="SelectedAppsListBox_SelectionChanged"/>
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="AddAppButton" Content="Add App" Margin="5" Click="AddAppButton_Click"/>
                    <Button x:Name="RemoveAppButton" Content="Remove App" Margin="5" Click="RemoveAppButton_Click"/>
                </StackPanel>
                <Label Grid.Row="2" Content="App Name:"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="AppNameTextBox" Margin="5" IsReadOnly="True"/>
                <Label Grid.Row="3" Content="App Path:"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="AppPathTextBox" Margin="5" IsReadOnly="True"/>
                <Label Grid.Row="4" Content="Preferred Agent:" Visibility="{Binding IsProVersion, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <ComboBox Grid.Row="4" Grid.Column="1" x:Name="PreferredAgentComboBox" Margin="5" Visibility="{Binding IsProVersion, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Save" Margin="5" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>


