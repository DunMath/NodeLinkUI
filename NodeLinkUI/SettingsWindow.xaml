<Window x:Class="NodeLinkUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="NodeLink Settings"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Master IP -->
            <TextBlock Text="Master IP:"/>
            <TextBox Text="{Binding MasterIp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Width="200" Margin="0,0,0,10"/>

            <!-- Heartbeat Interval -->
            <TextBlock Text="Heartbeat Interval (ms):"/>
            <TextBox Text="{Binding HeartbeatIntervalMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Width="200" Margin="0,0,0,10"/>

            <!-- GPU Toggle (label left, checkbox right) -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Use GPU if available:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <CheckBox IsChecked="{Binding UseGpuGlobally, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Width="100" Margin="5" Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="100" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>


