<Window x:Class="NodeLinkUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NodeLinkUI" Height="800" Width="1500"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Flat button look (non-3D) -->
        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Background" Value="#E6E6E6"/>
            <Setter Property="BorderBrush" Value="#C0C0C0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <!-- DataGrid visuals -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F3F3F3"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Row 0: Header (status + top-right logo) -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Toolbar + scheduler + hamburger on far right -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2: Main DataGrid -->
            <RowDefinition Height="*"/>
            <!-- Row 3: Bottom panels (Logs | Alerts | Tasks) -->
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>

        <!-- ===== Row 0: HEADER ===== -->
        <Border Grid.Row="0" Background="#F0F0F0" Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Reserved area for app graphic/logo -->
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Left: status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Role:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock x:Name="RoleLabel" Text="Current Role: Agent" FontWeight="Bold"
                               VerticalAlignment="Center" Margin="0,0,16,0"/>

                    <TextBlock Text="Master:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock x:Name="MasterStatusLabel" Text="Unknown" FontWeight="Bold"
                               VerticalAlignment="Center" Margin="0,0,16,0"/>

                    <TextBlock Text="Uptime:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock x:Name="MasterUptimeLabel" Text="00:00:00"
                               VerticalAlignment="Center" Margin="0,0,16,0"/>
                </StackPanel>

                <!-- Right: reserved app graphic / logo area -->
                <Border Grid.Column="1" Background="#FFFFFF" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="4"
                        HorizontalAlignment="Right" Width="280" Height="64">
                    <TextBlock Text="App Graphic" Foreground="#777" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- ===== Row 1: TOOLBAR + SCHEDULER + HAMBURGER ===== -->
        <Border Grid.Row="1" Background="#F5F5F5" Padding="8,6" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: buttons + scheduler -->
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Button x:Name="RegisterAgentButton" Content="Register" Style="{StaticResource FlatButton}"
                            Click="RegisterAgent_Click"/>
                    <Button x:Name="DispatchTaskButton" Content="Dispatch Node Test" Style="{StaticResource FlatButton}"
                            Click="DispatchTest_Click"/>
                    <Button Content="Compute Test" Style="{StaticResource FlatButton}"
                            Click="ComputeTest_Click"/>
                    <Button x:Name="BroadcastButton" Content="Broadcast Ping" Style="{StaticResource FlatButton}"
                            Click="Broadcast_Click"/>
                    <Button x:Name="StopAllTasksButton" Content="Stop All" Style="{StaticResource FlatButton}"
                            Click="StopAllTasksButton_Click"/>
                    <Button Content="Update Config" Style="{StaticResource FlatButton}"
                            Click="UpdateAgentConfig_Click"/>

                    <!-- Scheduler moved here -->
                    <TextBlock Text="Scheduler:" VerticalAlignment="Center" Margin="12,0,6,0"/>
                    <ComboBox x:Name="SchedulerModeDropdown" Width="130"
                              SelectionChanged="SchedulerModeDropdown_Changed">
                        <ComboBoxItem Content="Auto" IsSelected="True"/>
                        <ComboBoxItem Content="RoundRobin"/>
                        <ComboBoxItem Content="FastestFirst"/>
                        <ComboBoxItem Content="GpuPreferred"/>
                    </ComboBox>
                </StackPanel>

                <!-- Right: hamburger menu -->
                <Menu Grid.Column="1" Background="#F5F5F5" Foreground="Black">
                    <MenuItem Header="☰" FontSize="16" Foreground="Black">
                        <MenuItem Header="Settings" Click="SettingsButton_Click"/>
                        <MenuItem Header="Help / About" Click="HelpMenu_Click"/>
                        <Separator/>
                        <MenuItem Header="Open Logs…" Click="OpenLogsMenu_Click"/>
                        <Separator/>
                        <MenuItem Header="Save &amp; Close" Click="ExitButton_Click"/>
                    </MenuItem>
                </Menu>
            </Grid>
        </Border>

        <!-- ===== Row 2: MAIN DATA GRID ===== -->
        <Border Grid.Row="2" Margin="8" BorderBrush="#DADADA" BorderThickness="1" CornerRadius="4" Background="White">
            <DataGrid x:Name="NodeGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      SelectionMode="Extended"
                      GridLinesVisibility="None"
                      RowHeaderWidth="0" SelectionChanged="NodeGrid_SelectionChanged_1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Agent" Binding="{Binding AgentId}" Width="150"/>
                    <!-- Agent IP moved to column 2 -->
                    <DataGridTextColumn Header="IP" Binding="{Binding IpAddress}" Width="70"/>

                    <DataGridCheckBoxColumn Header="Reg" Binding="{Binding Registered}" Width="40"/>
                    <DataGridCheckBoxColumn Header="Online" Binding="{Binding IsOnline}" Width="40"/>
                    <DataGridCheckBoxColumn Header="Degraded" Binding="{Binding IsDegraded}" Width="55"/>

                    <DataGridTextColumn Header="CPU %" Binding="{Binding CpuUsagePercent, StringFormat=F0}" Width="50"/>
                    <DataGridTextColumn Header="GPU %" Binding="{Binding GpuUsagePercent, StringFormat=F0}" Width="50"/>
                    <DataGridTextColumn Header="Cores" Binding="{Binding CpuLogicalCores}" Width="30"/>
                    <DataGridTextColumn Header="Mem/MB" Binding="{Binding MemoryAvailableMB, StringFormat=F0}" Width="60"/>
                    <DataGridCheckBoxColumn Header="GPU" Binding="{Binding HasGpu}" Width="30"/>
                    <DataGridTextColumn Header="GPU Model" Binding="{Binding GpuModel}" Width="80"/><DataGridTextColumn Header="Q" Binding="{Binding TaskQueueLength}" Width="40"/>
                    <DataGridTextColumn Header="VRAM" Binding="{Binding GpuMemoryMB}" Width="90"/>
                    <!-- Latency + Threads not used -->
                    <!--DataGridTextColumn Header="Latency ms" Binding="{Binding LastLatencyMs, StringFormat=F1}" Width="10"/-->
                    <!--DataGridTextColumn Header="Threads" Binding="{Binding SoftThreadsQueued}" Width="10"/-->

                    <!-- Throughput columns collapsed by default -->
                    <DataGridTextColumn x:Name="NetCol" Header="Net MB/s" Binding="{Binding NetworkMbps, StringFormat=F1}" Width="90" Visibility="Collapsed"/>
                    <DataGridTextColumn x:Name="RCol" Header="R MB/s" Binding="{Binding DiskReadMBps, StringFormat=F1}" Width="80" Visibility="Collapsed"/>
                    <DataGridTextColumn x:Name="WCol" Header="W MB/s" Binding="{Binding DiskWriteMBps, StringFormat=F1}" Width="80" Visibility="Collapsed"/>

                    <DataGridTextColumn Header="Last Beat" Binding="{Binding LastHeartbeat, StringFormat=T}" Width="10"/>
                    <DataGridTextColumn Header="Test" Binding="{Binding SelfTestStatus}" Width="60"/>
                    <!--DataGridTextColumn Header="Last Compute" Binding="{Binding LastComputeResult}" Width="20"/-->
                    <DataGridTextColumn Header="At" Binding="{Binding LastComputeAt, StringFormat=T}" Width="10"/>

                    <DataGridTextColumn Header="RTT(ms)" Binding="{Binding LastLatencyMs}" Width="70" />
                    <DataGridTextColumn Header="RTT Avg(ms)" Binding="{Binding AvgLatencyMs, StringFormat={}{0:N0}}" Width="90" />
                    <DataGridTextColumn Header="Q/Wait(ms)" Binding="{Binding LastQueueWaitMs}" Width="70" />
                    <DataGridTextColumn Header="Q/Wait Avg(ms)" Binding="{Binding AvgQueueWaitMs, StringFormat={}{0:N0}}" Width="90" />

                                                           
                    <!--DataGridTextColumn Header="GPUs" Binding="{Binding GpuCount}" Width="60"/-->
                    <!-- Removed old IP column at end -->
                    <!--DataGridTextColumn Header="Instance" Binding="{Binding InstanceId}" Width="200"/-->
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- ===== Row 3: BOTTOM PANELS (Logs | Alerts | Tasks) ===== -->
        <Grid Grid.Row="3" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.3*"/>
            </Grid.ColumnDefinitions>

            <!-- Logs -->
            <GroupBox Header="Log" Grid.Column="0" Margin="0,0,8,0">
                <Grid>
                    <ListBox x:Name="LogBox"/>
                </Grid>
            </GroupBox>

            <!-- Alerts -->
            <GroupBox Header="Alerts" Grid.Column="1" Margin="0,0,8,0">
                <ListBox x:Name="AlertBox"/>
            </GroupBox>

            <!-- Tasks -->
            <GroupBox Header="Tasks" Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox x:Name="TaskListBox" Grid.Row="0">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Stop Task" Click="StopTaskMenuItem_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,6">
                        <TextBox x:Name="TaskInputBox" MinWidth="160" Margin="0,0,8,0"
                                 ToolTip="Enter custom task payload"/>
                        <Button x:Name="CustomTaskButton" Content="Send" Click="CustomTaskButton_Click" Style="{StaticResource FlatButton}" Margin="0,0,8,0"/>
                        <TextBlock Text="Count:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                        <TextBlock x:Name="TaskCountLabel" Text="0" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Row="2" Text="Right-click a task to stop it." Foreground="Gray" FontStyle="Italic"/>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
















