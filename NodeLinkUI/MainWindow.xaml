<Window x:Class="NodeLinkUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NodeLink Control Panel" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top row: Role and status -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Current Role:" Margin="0,0,10,0"/>
            <TextBlock x:Name="RoleLabel" FontWeight="Bold" Margin="0,0,20,0"/>
            <Button x:Name="SwitchRoleButton" Content="Switch Role" Click="SwitchRole_Click" Margin="0,0,20,0"/>
            <TextBlock Text="Master Status:" Margin="0,0,10,0"/>
            <TextBlock x:Name="MasterStatusLabel" FontWeight="Bold" Margin="0,0,20,0"/>
            <TextBlock Text="Uptime:" Margin="0,0,10,0"/>
            <TextBlock x:Name="MasterUptimeLabel" FontWeight="Bold"/>
        </StackPanel>

        <!-- Second row: Controls -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <Button x:Name="RegisterAgentButton" Content="Register Agent" Click="RegisterAgent_Click" Margin="0,0,10,0"/>
            <Button x:Name="DispatchTaskButton" Content="Dispatch Task" Click="DispatchTask_Click" Margin="0,0,10,0"/>
            <Button x:Name="BroadcastButton" Content="Broadcast" Click="Broadcast_Click" Margin="0,0,10,0"/>
            <TextBlock Text="Scheduler Mode:" Margin="10,0,5,0" VerticalAlignment="Center"/>
            <ComboBox x:Name="SchedulerModeDropdown" Width="120" SelectionChanged="SchedulerModeDropdown_Changed">
                <ComboBoxItem Content="Auto" IsSelected="True"/>
                <ComboBoxItem Content="Manual"/>
                <ComboBoxItem Content="Affinity"/>
                <ComboBoxItem Content="RoundRobin"/>
                <ComboBoxItem Content="LeastBusy"/>
            </ComboBox>
            <!-- New buttons -->
            <Button x:Name="SettingsButton" Content="Settings" Click="SettingsButton_Click" Margin="20,0,10,0"/>
            <Button x:Name="ExitButton" Content="Save+Exit" Click="ExitButton_Click" Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Third row: Main content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Agents" Grid.Column="0" Margin="0,0,10,0">
                <DataGrid x:Name="AgentGrid" AutoGenerateColumns="True"/>
            </GroupBox>

            <GroupBox Header="Tasks" Grid.Column="1" Margin="0,0,10,0">
                <StackPanel>
                    <ListBox x:Name="TaskListBox" Height="200"/>
                    <TextBlock Text="Total Tasks:" Margin="0,10,0,0"/>
                    <TextBlock x:Name="TaskCountLabel" FontWeight="Bold"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Alerts" Grid.Column="2">
                <ListBox x:Name="AlertBox" Height="250"/>
            </GroupBox>
        </Grid>

        <!-- Fourth row: Log output -->
        <ListBox x:Name="LogBox" Grid.Row="3" Margin="0,10,0,0" Height="100"/>
    </Grid>
</Window>

